<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ex1">

    <ImageView
        android:id="@+id/imageViewNike"
        android:layout_width="161dp"
        android:layout_height="173dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nike" />

    <ImageView
        android:id="@+id/imageViewAdidas"
        android:layout_width="152dp"
        android:layout_height="172dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewNike"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/adidas" />

    <ImageView
        android:id="@+id/imageViewPuma"
        android:layout_width="232dp"
        android:layout_height="151dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewNike"
        app:srcCompat="@drawable/puma" />

    <TextView
        android:id="@+id/textViewDescricao"
        android:layout_width="240dp"
        android:layout_height="162dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPuma" />
</androidx.constraintlayout.widget.ConstraintLayout>